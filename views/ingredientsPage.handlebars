<main class="ingredient-body">
  <div class="header">Ingredients</div>
  <div class="subheader">Read about the issues and select alternatives</div>

  <div class = "ingredient-list-container">
    {{#each INGREDIENTS}}
    <div class = "ingredient-container shadow">
      <div><b>{{Name}}</b></div>
      <div>{{Rating}}</div>
      <div>{{Issues}}</div>

      <button type = "button" class = "subsitutes-button shadow">Show Alternatives</button>
      <div class= "subsitutes-container">
        <div class = "id">{{ID}}</div>
        {{#each Subsitutes}}
        <button class ="subs-button shadow">
          <div class = "id">{{this.ID}}</div>
          <div>{{this.name}} - {{this.rating}}</div>
        </button>
        {{/each}}
        <button class = "subs-button shadow">Remove Ingredient</button>
      </div>
    </div>
    {{/each}}
    {{#if swap}}
    <button type = "button" class = "swap-button shadow">Make Swaps!</button>
    {{/if}}
  </div>


    {{!-- <div class = "back-container">
      <button type = "button" class = "back-button">Back</button>
    </div> --}}


</main>

<script type = "text/javascript" src="http://localhost:3000/ingredients.js"></script>
