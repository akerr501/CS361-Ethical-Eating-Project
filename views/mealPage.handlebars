<div class="mealBody">
  <div class="mcard L shadow p-3 mb-3 rounded">
  <p class="mealName">{{meal.Name}}</p>
  </div>
  <div class="mcard R shadow p-3 mb-3 rounded">
  <p class="mealRating">Ethic Rating: {{meal.er}}</p>
  </div>
  <table class="ingredientTable shadow p-4 mb-4 rounded">
    <thead>
      <tr class="ingredientTable">
      <th class="ingName">Ingredients</th>
      <th class="ingRating">Ethic Rating</th>
      </tr>
    </thead>
    <tbody class="ingredientTable">
      {{#each ingredient}}
        <tr class="ingredientTable">
          <td class="ingName"><a class="tblLink" href="http://localhost:3000/ingredients/[{{ID}}]">{{Name}}</a></td>
          <td class="ingRating">{{Rating}}</td>
        </tr>
      {{/each}}
    </tbody>
  </table>
  <p class="mealInstructions">Click on an ingredient to see its associated ethical issues.
    <br>
  Customize this meal to make it more responsible and save it to your meal book!</p>
  <input type="button" class="edit" onclick="location.href='http://localhost:3000/buildEdit/{{meal.id}}';" value="Edit & Save" />
  </div>
</div>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
