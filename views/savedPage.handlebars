and also has .savedRecipes which has the meal data --}}
<ul class = "recipeList" id="recipeList">
    <lh id = "savedHeader">
        Saved Recipes
    </lh>
    {{#each savedMealsInfo}}
    <li>
        <button class = "recipeButton">{{this.Name}}</button>
    </li>
    {{/each}}
</ul>

<div class = "recipeInfo">
    <h1 class = "recipeTitle">
        <span class = "recipeName">{{allMeals.curMeal.Name}}</span>
        <span class = "ratingContainer">
        Ethical Rating: 
        <span class = "ratingNum">75</span>     
        </span>   
    </h1>

    <table class = "ingredientTable">
        <tr class = "tableHeaderRow">
            <th>
                Ingredients
            </th>
            <th>
                Ethical Rating
            </th>
        </tr>
        <tr class = "ingredientInfo">
            <td class = "ingredientName">
                Chicken
            </td>
            <td class = "ingredientRating">
                50
            </td>
        </tr>
        <tr class = "ingredientInfo">
            <td class = "ingredientName">
                Potatoes
            </td>
            <td class = "ingredientRating">
                90
            </td>
        </tr>
        <tr class = "IngredientInfo">
            <td class = "ingredientName">
                Onion
            </td>
            <td class = "ingredientRating">
                85
            </td>
        </tr>
    </table>

    <button class = "nonRecipeButton" id = "editButton">
            <a href="/build">Edit Recipe</a>
    </button>
    <button class = "nonRecipeButton" id = "deleteButton">
        Delete from Recipe Book
    </button>
</div>  
